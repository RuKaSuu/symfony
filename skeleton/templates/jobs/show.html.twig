{% extends 'base.html.twig' %}

{% block title %}Offres{% endblock %}

{% block body %}

    <style>

        .testimonial-card .card-up {
            height: 80px;
            border-top-left-radius: .25rem;
            border-top-right-radius: .25rem;
        }

        .aqua-gradient {
            background: linear-gradient(40deg, #2096ff, #05ffa3) !important;
        }

        .testimonial-card .avatar {
            width: 140px;
            margin-top: -75px;
        }

        p {
            font-size: 0.9rem;
        }

    </style>

    {% include('navbar.html.twig') %}
    <div class="text-center d-flex justify-content-center align-items-center">
        <div class="text-center d-flex flex-column justify-content-center align-items-center w-75 ">

            <h1 class="m-5">Listes des Offres d'emplois</h1>

            <div class="container text-center">
                {% if jobs %}
                    <div class="row">
                        {% for job in jobs %}
                            <div class="col mb-5">
                                <div class="container">
                                    <section class="mx-auto my-5" style="width: 18rem;">
                                        <div class="card testimonial-card mt-2 mb-3">
                                            <div class="card-up aqua-gradient"></div>
                                            <div class="avatar mx-auto white">
{#                                                {% if job.profilePicture == "" %}#}
                                                    <img class="rounded-circle w-50 h-50" src="https://static.thenounproject.com/png/363633-200.png" alt="">
{#                                                {% else %}#}
{#                                                    <img class="rounded-circle w-50 h-50" src="{{ job.profilePicture }}" alt="">#}
{#                                                {% endif %}#}
                                            </div>
                                            <div class="card-body text-center">
                                                <h4 class="card-title font-weight-bold">{{ job.company.name }}</h4>
                                                <h6 class="card-subtitle mb-2 text-muted">{{ job.Title }}</h6>
                                                <hr>
                                                <p class="card-subtitle">
                                                    {{ job.Description }}
                                                </p>
                                                {% for skill in job.skills %}
                                                    <span class="badge rounded-pill text-bg-primary">{{ skill }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <h1 class="m-5">Aucun utilisateur trouv√©</h1>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
