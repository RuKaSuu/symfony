{% extends 'base.html.twig' %}

{% block title %}Hello JobsController!{% endblock %}

{% block body %}
    <style>
        .tbody tr:nth-child(odd) {
            background-color: #E6E6E6;
            text-align: center;
        }

        .tbody td {
            padding: 10px;
        }
    </style>


    <div>
        {{ include('navbar.html.twig') }}

        <div class="text-center d-flex flex-column align-items-center m-5">

            <h1>Jobs</h1>

            <div class="w-75 d-flex justify-content-center align-items-center">
                {#        <table class="table table-striped table-bordered table-hover table-condensed"> #}
                <table class="table table-dark table-hover table-striped rounded overflow-hidden">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>Create At</th>
                        <th>Minimum Degree</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="tbody">
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.id }}</td>
                            <td>{{ job.jobTitle }}</td>
                            <td>{{ job.jobDescription }}</td>
                            <td>{{ job.jobLocation }}</td>
                            <td>{{ job.jobPostDate ? job.jobPostDate|date('d-m-Y') : '' }}</td>
                            <td>{{ if job.jobDegree = 3 }}</td>
                            <td>
                                <a class="text-light fw-bold"
                                   href="{{ path('job_delete', {'id': job.id}) }}"><i data-feather="trash-2"></i>
                                </a>
                            </td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan=\"18\">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
